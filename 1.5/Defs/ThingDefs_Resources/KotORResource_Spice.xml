				</statOffsets>
				<capMods>
					<li>
					  <capacity>Consciousness</capacity>
					  <offset>1</offset>
					</li>
					<li>
					  <capacity>Moving</capacity>
					  <offset>0.30</offset>
					</li>
					<li>
					  <capacity>Manipulation</capacity>
					  <offset>0.30</offset>
					</li>
					<li>
					  <capacity>Sight</capacity>
					  <offset>0.30</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<ThoughtDef>
		<defName>SpiceHigh</defName>

      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>5000</disappearsAfterTicks>
		<showRemainingTime>True</showRemainingTime>
      </li>
    </comps>
  </HediffDef>
  
  <ThingDef ParentName="guy762_MakeableDrugPillBase">
    <defName>guy762_stim_str</defName>
    <label>adrenal strength</label>
    <description>A shot of this enhancer provides a temporary boost in the strength of the user. The effect wears off after a short time, and side effects are considered minimal. They cannot be used by droids.</description>
	<descriptionHyperlinks>
		<HediffDef>guy762_stimulant_str</HediffDef>
	</descriptionHyperlinks>
	<possessionCount>3</possessionCount>
    <graphicData>
      <texPath>Items/Consumables/Stimulants/stim_blue</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
	  <drawSize>0.75</drawSize>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <MarketValue>50</MarketValue>
	  <WorkToMake>1000</WorkToMake>
      <Mass>0.01</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
	<stackLimit>25</stackLimit>
    <techLevel>Spacer</techLevel>
    <ingestible>
      <drugCategory>Hard</drugCategory>
      <baseIngestTicks>10</baseIngestTicks>
	  <ingestSound>kotorsound_inject</ingestSound>
	  <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>guy762_stimulant_str</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
	<tradeTags>
      <li>guy762TT_KotORStims</li>
    </tradeTags>
    <recipeMaker>
      <researchPrerequisite>KOTOR_Research_AdvPhysiology</researchPrerequisite>
      <recipeUsers>
        <li>DrugLab</li>
		<li>kotor_DrugLab</li>
      </recipeUsers>
	  <bulkRecipeCount>10</bulkRecipeCount>
    </recipeMaker>
    <costList>
      <Neutroamine>1</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1767</listOrder>
		<chemical>guy762_chemical_strstim</chemical>
        <isCombatEnhancingDrug>true</isCombatEnhancingDrug>
		<addictiveness>0</addictiveness>
		<needLevelOffset>0.1</needLevelOffset>
        <existingAddictionSeverityOffset>0.10</existingAddictionSeverityOffset>
      </li>
    </comps>
    <orderedTakeGroup>Drug</orderedTakeGroup>
  </ThingDef>
  
  
  
  
  
  
  

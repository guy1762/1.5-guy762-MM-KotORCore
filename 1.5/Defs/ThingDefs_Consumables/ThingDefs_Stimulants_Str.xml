<Defs>

  <HediffDef>
    <defName>guy762_stimulant_str</defName>
    <description>A chemical boost of the user's strength.</description>
    <label>adrenal strength</label>
	<hediffClass>HediffWithComps</hediffClass>
    <maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <statOffsets>
			<MeleeDamageFactor>0.3</MeleeDamageFactor>
			<VEF_MassCarryCapacity>30</VEF_MassCarryCapacity>
